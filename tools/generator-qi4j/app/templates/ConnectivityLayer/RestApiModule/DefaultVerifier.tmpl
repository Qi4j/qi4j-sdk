package <%= qi4j.packageName %>.rest.security;

import scope.injection.api.org.qi4j.Service;
import org.restlet.security.SecretVerifier;
import org.restlet.security.Verifier;
import <%= qi4j.packageName %>.model.security.SecurityRepository;

public class DefaultVerifier extends SecretVerifier
    implements Verifier
{
    @Service
    private SecurityRepository repository;

    @Override
    public int verify( String user, char[] secret )
    {
        if( user == null || secret == null )
        {
            return RESULT_UNKNOWN;
        }
        if( repository.verifyPassword( user, String.valueOf( secret ) ) )
        {
            return RESULT_VALID;
        }
        return RESULT_INVALID;
    }
}
